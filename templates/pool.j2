[{{ item.site }}]

listen = /var/run/php-fpm/{{ item.site }}.sock 

user = {{ item.fpm }}
group = nginx

listen.owner = {{ item.fpm }} 
listen.group = nginx
listen.mode = 0660

pm = dynamic  
pm.max_children = 50 
pm.start_servers = 5  
pm.min_spare_servers = 5  
pm.max_spare_servers = 35
pm.max_requests = 500

